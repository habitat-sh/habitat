#!/bin/sh

EXIT_NOW=0

set_exit_now() {
  EXIT_NOW=1
}

trap "set_exit_now" INT TERM HUP
echo Shipping out to Boston
echo "### Configuration file ###"
cat /hab/svc/simple_service_gossip/config/simple.conf
echo "### End of configuration file ###"
echo "### Running toml data ###"
cat /hab/svc/simple_service_gossip/config.toml
echo "### End running toml data ###"

while [ 1 ]; do
  if [ $EXIT_NOW = 1 ]; then
     echo "Exiting on signal"
     exit 0
  fi
  sleep 1
done

